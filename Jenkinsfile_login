pipeline { 
    agent any
    environment {
        VENV_DIR = 'venv'
        BROWSER_OPTIONS = '--guest'
    }

    stages {
        stage('Setup Python Environment') {
            steps {
                bat """
                if not exist %VENV_DIR% python -m venv %VENV_DIR%
                %VENV_DIR%\\Scripts\\python.exe -m pip install --upgrade pip
                %VENV_DIR%\\Scripts\\pip install robotframework selenium robotframework-seleniumlibrary
                """
            }
        }

        stage('Run Valid Login Test Only') {
            steps {
                // Corrected for Windows: double quotes and escaped backslashes
                bat "\"%VENV_DIR%\\Scripts\\robot\" --test \"Valid User Login\" \"tests\\login\\valid_login.robot\""
            }
        }
    }

    post {
        always {
            // Archive the Robot reports
            archiveArtifacts artifacts: '**/output.xml, **/report.html, **/log.html', allowEmptyArchive: true

            // Publish the report inside Jenkins (requires HTML Publisher Plugin)
            publishHTML([
                reportName: 'Robot Framework Report',
                reportDir: '.',
                reportFiles: 'report.html',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
        }
    }
}
